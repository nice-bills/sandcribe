{
  "manifest_version": 3,
  "name": "Dune SQL Logger",
  "version": "0.1.0",
  "description": "Captures Dune Analytics SQL queries for training data.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://dune.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://dune.com/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Dune SQL Logger"
  },
  "background": {
    "service_worker": "background.js"
  }
}
